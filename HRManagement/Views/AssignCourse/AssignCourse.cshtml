@model HRManagement.ViewModels.CourseUsersViewModel
@{
    ViewBag.Title = "AssignCourse";
}

<h2>Assign Course To User</h2>

@Html.ValidationSummary(false, "", new { @class = "bg-danger" })

@using (Html.BeginForm("AssignCourse", "AssignCourse", FormMethod.Post))
{

    <div class="form-group">
        Username
        @Html.HiddenFor(m => m.CourseId)
        @Html.DropDownListFor(m => m.UserId,
         new SelectList(Model.Users, "Id", "Username"),
         new { @class = "form-control" }
         )
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Assign</button>
    </div>
}

