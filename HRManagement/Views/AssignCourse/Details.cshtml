@model IEnumerable<HRManagement.Models.ApplicationUser>
@{
    ViewBag.Title = "Details";
}

<h2>List Of Users Assigned To Course</h2>

<div class="form-group">
    @Html.ActionLink("Back","Index","AssignCourse",null,
      new { @class = "btn btn-primary" })
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>
                    @Html.ActionLink("Remove User From Course","RemoveUser",
                      new { id = ViewBag.TeamId, userId = user.Id },
                      new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

