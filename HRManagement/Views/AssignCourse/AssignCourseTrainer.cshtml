@model HRManagement.ViewModels.CourseTrainersViewModel
@{
    ViewBag.Title = "AssignCourse";
}

<h2>Assign Course To Trainer</h2>

@Html.ValidationSummary(false, "", new { @class = "bg-danger" })

@using (Html.BeginForm("AssignCourseTrainer", "AssignCourse", FormMethod.Post))
{

<div class="form-group">
    Username
    @Html.HiddenFor(m => m.CourseId)
    @Html.DropDownListFor(m => m.TrainerId,
     new SelectList(Model.Trainers, "TrainerId", "FullName"),
     new { @class = "form-control" }
     )
</div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Assign</button>
    </div>
}

