@model  IEnumerable<HRManagement.Models.Trainer>
@{
    ViewBag.Title = "Index";
}
<h2>List of Trainer</h2>
<div class="form-group">
    @using (Html.BeginForm("Index", "Todoes", FormMethod.Get))
    {
        @Html.TextBox("searchString", "")
        <button type="submit"><i class="fa fa-search"></i></button>
    }

</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date of birth</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>@item.FullName</td>
                <td>@item.DateOfBirth.ToString("MMM-dd-yyyy")</td>             
                <td>
                    @Html.ActionLink("View Profile", "Details", "Trainers",
                                       new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Update Profile", "Update", "Trainers",
                                       new { id = item.Id }, new { @class = "btn btn-danger" })
                    @Html.ActionLink("Delete", "Delete", "Trainers",
                                       new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("My Course", "ViewAssignedCourses", "Trainers",
                                       new { id = item.Id }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>


